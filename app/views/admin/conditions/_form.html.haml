= semantic_form_for [:admin, @condition]  do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs 'Title' do
    = f.input :title, label: false
  = f.inputs 'Description' do
    = f.input :description, label: false, as: :ckeditor
  = f.inputs 'Picture' do
    = f.input :picture, as: :file, label: false
    - if @condition.present?
      = image_tag(@condition.picture.url)
    %br

  = f.inputs 'SEO' do
    = f.input :seo_title, label: 'SEO Title'
    = f.input :seo_description, label: 'SEO Description'
    = f.input :seo_keywords, label: 'SEO Keywords'
  = f.actions
